---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { type Language, defaultLanguage } from '../i18n';

interface Props {
  title: string;
  lang?: Language;
  description?: string;
}

const { title, lang = defaultLanguage, description = "Bastiaan & Gemma - Wedding November 7, 2026" } = Astro.props;
const currentPath = Astro.url.pathname;
const currentSearch = Astro.url.search;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="font-sans text-gray-700 bg-stone-50 antialiased">
    <!-- Language Switcher Header -->
    <header class="fixed top-0 right-0 z-50 p-4">
      <div class="bg-white/90 backdrop-blur-sm rounded-lg shadow-sm px-3 py-2">
        <LanguageSwitcher currentLang={lang} currentPath={currentPath} currentSearch={currentSearch} />
      </div>
    </header>

    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #c9a66b;
    --color-secondary: #8b7355;
    --color-accent: #d4a373;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: #faf9f6;
    color: #4a4a4a;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 400;
  }
</style>
