      <div class="absolute inset-0 bg-black/30"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center text-white px-4 mt-[28rem] md:mt-[36rem]">
      <p class="text-lg md:text-xl tracking-widest uppercase mb-4 opacity-90 font-light">{t.hero.saveTheDate}</p>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-serif font-light mb-6 leading-tight">
        {t.hero.names}
